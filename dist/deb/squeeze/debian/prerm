#!/bin/sh

# prerm script for froxlor

set -e

if [ -d /var/www/froxlor ]; then
	owner="$(stat -c %U /var/www/froxlor/)"
	group="$(stat -c %G /var/www/froxlor/)"	

	if [ "${owner}" != "" ] && [ "$group" != "" ]; then
		find /tmp/ -type f -name "froxlordir"* -delete
		tempfile --dir=/tmp --name=froxlordir_${owner}_${group}.tmp
	fi
fi

exitcode="$?"

exit "$exitcode"
