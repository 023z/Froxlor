{% extends "Sparkle2/base.html.twig" %}

{% block body %}
<div class="container container-login text-center">
	<form class="form-signin" method="post" action="">
		<img class="mb-4" src="{{ header_logo }}"
			alt="Froxlor Server Management Panel">
		<h1 class="h3 mb-3 font-weight-normal">Froxlor&nbsp;-&nbsp;Login</h1>
		{% if disp_login_error %}
		<div class="alert alert-danger" role="alert">
			<strong>{{ lng('error.error') }}</strong><br>
			{{ disp_login_error|raw }}
		</div>
		{% endif %}
		<label for="loginname" class="sr-only">{{ lng('login.username') }}</label>
		<input type="input" id="loginname" name="loginname"
			class="form-control mb-1" placeholder="{{ lng('login.username') }}"
			required autofocus> <label for="loginemail" class="sr-only">{{ lng('login.email') }}</label>
		<input type="email" id="loginemail" name="loginemail"
			class="form-control" placeholder="{{ lng('login.email') }}" required>
		<br> <input type="hidden" name="send" value="send" />
		<button class="btn btn-lg btn-primary btn-block" type="submit">
			{{ lng('login.remind') }}
		</button>
		<p class="mt-5 mb-3 text-muted">
			<a href="?view=overview">{{ lng('login.backtologin') }}</a>
		</p>
	</form>
</div>
{% endblock %}
