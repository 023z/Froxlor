{% extends "Sparkle2/userarea.html.twig" %}

{% block content %}

<div class="card">
	<div class="card-header">
		<ul class="nav nav-tabs card-header-tabs" id="subnav-tab"
			role="tablist">
			<li class="nav-item"><a class="nav-link active"
				id="subnav-cnt-tab" data-toggle="tab" href="#tab-cnt" role="tab"
				aria-controls="subnav-cnt" aria-selected="true">{{ lng('admin.updatecounters') }}</a></li>
		</ul>
	</div>
	<div class="card-body tab-content" id="subnav-tabContent">
		<div class="tab-pane fade show active" id="tab-cnt" role="tabpanel"
			aria-labelledby="subnav-cnt-tab">
			<div class="card">
				<div class="card-body" id="counters-list">
					{{ dump(counters) }}
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
