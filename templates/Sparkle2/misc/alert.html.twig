{% extends "userarea.html.twig" %}

{% block content %}
<div class="alert alert-{{ type }} fade show"
	role="alert">
	<h4 class="alert-heading">
		{{ heading }}
	</h4>
	<p>
		{{ alert_msg }}
	</p>
	{% if alert_info %}
	<hr>
	<p class="mb-0">
		<pre>{{ alert_info }}</pre>
	</p>
	{% endif %}
</div>
{% endblock %}
