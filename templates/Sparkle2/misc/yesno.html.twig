{% extends "Sparkle2/userarea.html.twig" %}

{% block custom_css %}
<link href="../templates/Sparkle2/assets/css/switch.css"
	rel="stylesheet">
{% endblock %}

{% block content %}
<div class="alert alert-info fade show container" role="alert">
	<h4 class="alert-heading">
		{{ lng('question.question') }}
	</h4>
	<p>
		{{ yesno_msg|raw }}
	</p>
	<p class="mt-1 text-center">
		<form action="{{ yesfile }}" method="post">
			{{ extraparams|raw }}
		    {{ hiddenparams|raw }}
			<input type="hidden" name="send" value="send" />
			<button type="submit" name="submitbutton" class="btn btn-success">{{ lng('panel.yes') }}</button>&nbsp;
			<a href="javascript:window.history.back();" id="historyback" class="btn btn-secondary">{{ lng('panel.no') }}</a>
		</form>
	</p>
</div>
{% endblock %}
