{% extends "Sparkle2/base.html.twig" %}

{% block custom_js %}
<script
	<script src="../templates/Sparkle2/assets/js/main.js"></script>
{% endblock %}

{% block navigation %}
	<div class="row d-none d-md-block">
	<div class="col topper">
		<div class="row">
			<div class="col">
				<img src="{{ header_logo }}" alt="Froxlor Server Management Panel"
					class="img-fluid rounded py-3" />
			</div></div>
	</div>
</div>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerMain" aria-controls="navbarTogglerMain" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarTogglerMain">
		<ul class="navbar-nav mr-auto">
			{{ include('Sparkle2/topmenu.html.twig') }}
		</ul>
		<ul class="navbar-nav navbar-right">
		{% if call_static('\\Froxlor\\CurrentUser', 'getField', ['switched_user']) is not empty and call_static('\\Froxlor\\CurrentUser', 'getField', ['switched_user']) is iterable %}
			<li class="nav-item text-nowrap d-block mr-2"><a
				class="btn btn-info btn-sm d-block"
				href="index.php?module=AdminCustomers&view=suBack"><i
					class="fas fa-undo"></i> Switch back</a></li>
		{% endif %}
			<li class="nav-item text-nowrap d-block"><a
				class="btn btn-danger btn-sm d-block"
				href="index.php?module={% if call_static('\\Froxlor\\CurrentUser', 'isAdmin') %}Admin{% else %}Customer{% endif %}Index&view=logout"><i
					class="fas fa-power-off"></i> Logout</a></li>
		</ul>
	</div>
</nav>

{% endblock %}

{%  block body %}
<div class="row">
	<main role="main" class="col-lg-12 px-3">
	{% block content %} {% endblock %} </main>
</div>
{% endblock %}
