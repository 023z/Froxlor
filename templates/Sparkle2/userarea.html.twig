{% extends "base.html.twig" %}

{% block custom_js %}
<script
	<script src="../templates/Sparkle2/assets/js/main.js"></script>
{% endblock %}

{% block navigation %}
<div class="row d-none d-md-block">
	<div class="col topper">
		<div class="row">
			<div class="col">
				<img src="{{ header_logo }}" alt="Froxlor Server Management Panel"
					class="img-fluid rounded py-3" />
			</div></div>
	</div>
</div>
<nav class="navbar navbar-expand-lg">
	<button class="navbar-toggler" type="button" data-toggle="collapse"
		data-target="#navbarToggler" aria-controls="navbarToggler"
		aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarToggler">
		<ul class="navbar-nav mr-auto">
			{{ include('topmenu.html.twig') }}
		</ul>
		<ul class="navbar-nav navbar-right">
			<li class="nav-item text-nowrap"><a
				class="btn btn-danger btn-sm"
				href="index.php?module={% if call_static('\\Froxlor\\CurrentUser', 'getField', ['adminsession']) == 1 %}Admin{% else %}Customer{% endif %}Index&view=logout"><i
					class="fas fa-power-off"></i> Logout</a></li>
		</ul>
	</div>
</nav>

{% endblock %}

{%  block body %}
<div class="row">
	<main role="main" class="col-lg-12 px-4 border-top"> {{ breadcrumb|raw }}
	{% block content %} {% endblock %} </main>
</div>
{% endblock %}
